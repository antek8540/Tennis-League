    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        t.setScore(0,Integer.parseInt(jTextField1.getText()));
        t.setScore(1,Integer.parseInt(jTextField2.getText()));
        t.setScore(2,Integer.parseInt(jTextField3.getText()));
        t.setScore(3,Integer.parseInt(jTextField4.getText()));
        t.setScore(4,Integer.parseInt(jTextField5.getText()));
        t.setScore(5,Integer.parseInt(jTextField6.getText()));
        t.setScore(6,Integer.parseInt(jTextField7.getText()));
        t.setScore(7,Integer.parseInt(jTextField8.getText()));
        for (int i =0; i<8;i = i+2){
            int k = 8;
            if(t.getScore(i)>t.getScore(i+1)){
                t.setPlayer(k, t.getPlayer(i));
            }else{
                t.setPlayer(k, t.getPlayer(i+1));
            }
            k++;
        }
        jLabel9.setText(t.getPlayer(8).getSurname());
       jLabel10.setText(t.getPlayer(9).getSurname());
       jLabel11.setText(t.getPlayer(10).getSurname());
       jLabel2.setText(t.getPlayer(11).getSurname());
       
    
    }                                        

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // saving second round
        t.setScore(8,Integer.parseInt(jTextField1.getText()));
        t.setScore(9,Integer.parseInt(jTextField2.getText()));
        t.setScore(10,Integer.parseInt(jTextField3.getText()));
        t.setScore(11,Integer.parseInt(jTextField4.getText()));
      //  for (int i)
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // saving third round and finishing tourament 
    }                                        

